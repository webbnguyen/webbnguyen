
<div class="main-content">

                         

        <% current_site.the_post_type('commerce').the_categories.decorate.each_with_index do |cat, i| %>
                <header> <h3 class="head text-center"><%= cat.the_title %></h3> </header>

            <div class="right"><a href="<%=cat.the_url %>">See All</a>></div>
            <div class="carousel slide" id="myCarousel<%= i%>">
                        
                <% (cat.the_posts.decorate).each_with_index do |product, index| %>
                  <ul class="sliderok" >

                        <div class="col-md-122 product col-sm-122 col-xs-122 text-center">
                            <a href="<%= product.the_url %>" target="_blank">
                                <p> <img src="<%= product.the_thumb_url %>" alt="" /> </p></a>
                            <div class="mask">
                                <a href="<%= product.the_url %>" target="_blank">Quick View</a>
                            </div>
                            <div class="p_title">
                                <a class="product_name" href="<%= product.the_url %>" target="_blank"><%= product.the_title %></a>
                                <%= product.the_edit_link %>
                             <p><a class="item_add" href="#"><i></i> <span class="item_price"><%= product.the_price %></span></a></p>

        <div id="hearts" class="starrr" data-rating="<%= product.the_field("star-rating-ok") %>"><span class="glyphicon .glyphicon-heart-empty glyphicon-heart"></span></div>    


                            </div>
                        </div>




                  </ul>
                <% end %>
            </div>
               
        <% end %>
        <div class="clearfix"></div>

   
</div>

