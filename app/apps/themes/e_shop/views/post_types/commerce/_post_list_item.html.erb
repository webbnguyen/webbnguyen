<% 
product ||= post
slide = nil if !defined? slide 
%>
<div class="<%= slide ? "" : "col-md-4 product col-sm-6 col-xs-12 text-center" %> ">
    <a href="<%= product.the_url %>" target="_blank">
        <img src="<%= product.the_thumb_url %>" alt="" /></a>
    <div class="mask">
        <a href="<%= product.the_url %>" target="_blank">Quick View</a>
    </div>
    <div class="p_title">
        <a class="product_name" href="<%= product.the_url %>" target="_blank"><%= product.the_title %></a>
        <%= product.the_edit_link %>
        <p><a class="item_add" href="#"><i></i> <span class="item_price"><%= product.the_price %></span></a></p>
    </div>
</div>